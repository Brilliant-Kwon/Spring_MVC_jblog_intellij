<?xml version="1.0" encoding="UTF-8"?>

<!-- configuration -->
<configuration debug="true">
    <!-- Appender : 언제, 어디에, 어떤 로그를 찍을지 설정 -->
    <!-- Console Appender : 콘솔에 로그 출력 -->
    <appender name="consoleAppender"
              class="ch.qos.logback.core.ConsoleAppender">
        <!-- 로그 포맷 결정 -->
        <encoder>
            <charset>UTF-8</charset>
            <Pattern>
                %d{HH:mm:ss.SSS} [%thread] %-5level %logger{5} - %msg%n
            </Pattern>
        </encoder>
    </appender>

    <!-- Rolling File Appender : 파일에 로그 기록 -->
    <appender name="fileAppender"
              class="ch.qos.logback.core.rolling.RollingFileAppender">
        <!-- 로그 기록 파일 위치 -->
        <file>\log-jblog\jblog.log</file>
        <encoder>
            <charset>UTF-8</charset>
            <Pattern>
                %d{HH:mm:ss.SSS} [%thread] %-5level %logger{5} - %msg%n
            </Pattern>
        </encoder>
        <!-- 로그 롤링 정책 -->
        <rollingPolicy
                class="ch.qos.logback.core.rolling.FixedWindowRollingPolicy">
            <FileNamePattern>
                \log-jblog\jblog.%i.log.zip
            </FileNamePattern>
            <MinIndex>1</MinIndex>
            <MaxIndex>10</MaxIndex>
        </rollingPolicy>
        <!-- 롤링 정책 수행하는 조건 trigger -->
        <triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
            <MaxFileSize>10MB</MaxFileSize>

        </triggeringPolicy>


    </appender>

    <!-- Logger 등록 -->
    <!-- 디버그 level="debug"로 제한했음 -->
    <logger name="jblog" level="debug">
        <appender-ref ref="consoleAppender" />
    </logger>

    <root level="trace">
        <!-- trace는전체를 의미함 모든 로거가 발생했을경우 fileappender참조값으로 사용하여 파일에 저장함-->
        <appender-ref ref="fileAppender" />
    </root>

</configuration>