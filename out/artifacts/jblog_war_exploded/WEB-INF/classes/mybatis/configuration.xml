<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration
        PUBLIC "-//mybatic.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
    <!--객체 별칭 지정-->
    <typeAliases>
        <typeAlias alias="userVo"
                   type="jblog.vo.UserVo"/>
        <typeAlias alias="blogVo"
                   type="jblog.vo.BlogVo"/>
        <typeAlias alias="cateVo"
                   type="jblog.vo.CategoryVo"/>
        <typeAlias alias="postVo"
                   type="jblog.vo.PostVo"/>
        <typeAlias alias="commentVo"
                   type="jblog.vo.CommentVo"/>
    </typeAliases>

    <mappers>
        <mapper resource="mybatis/mappers/users.xml"/>
        <mapper resource="mybatis/mappers/blog.xml"/>
        <mapper resource="mybatis/mappers/cate.xml"/>
    </mappers>
</configuration>